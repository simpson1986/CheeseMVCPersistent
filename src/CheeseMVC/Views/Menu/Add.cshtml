@{
    ViewData["Title"] = "New Menu";
}
@model CheeseMVC.ViewModels.AddMenuViewModel

<h2>Add</h2>

<div class="container">
    <form asp-controller="Menu" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="form-control-feedback" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Add Menu" />
        </div>
    </form>
</div>